<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="200dip"
  android:layout_height="fill_parent">
  
	<RelativeLayout
	  android:orientation="horizontal"
	  android:gravity="center_vertical"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content">
	  
	    <LinearLayout
		  android:orientation="vertical"
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content"
		  android:padding="3dip"
		  android:id="@+id/nickeName">
		  <TextView android:layout_width="120dip"
		  	android:layout_height="wrap_content"
		  	android:id="@+id/nicke_name_label"
		  	android:text="@string/nicke_name_label"/>
		  <EditText android:layout_width="160dip"
		  	android:layout_height="45dip"
		  	android:text=""
		  	android:maxLength="10"
		  	android:singleLine="true"
		  	android:id="@+id/nicke_name"/>
		</LinearLayout>
	    
	   	<LinearLayout
		  android:orientation="vertical"
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content"
		  android:layout_below="@id/nickeName"
		  android:padding="3dip"
		  android:id="@+id/spinnerIcon">
		  	<TextView android:layout_width="wrap_content"
		  		android:layout_height="wrap_content"
		  		android:text="@string/headicontitle"/>
		    <Spinner android:layout_height="50dip"
		    	android:layout_width="160dip"
		    	android:id="@+id/spinner1"/>
	    </LinearLayout>
	    <LinearLayout
		  android:orientation="vertical"
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content"
		  android:padding="3dip"
		  android:layout_below="@id/spinnerIcon"
		  android:id="@+id/spinnerGroup">
		  	<TextView android:layout_width="wrap_content"
		  		android:layout_height="wrap_content"
		  		android:text="@string/groupicontitle"/>
		    <Spinner android:layout_height="50dip"
		    	android:layout_width="160dip"
		    	android:id="@+id/spinner2"/>
	    </LinearLayout>

	</RelativeLayout>
	<LinearLayout
	  android:orientation="horizontal"
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content"
	  android:padding="5dip">
		<Button android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:id="@+id/okBtn"
			android:layout_weight="0.5"
			android:text="@string/ok"/>
		<Button android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:id="@+id/cancelBtn"
			android:layout_weight="0.5"
			android:text="@string/cancel"/>
	</LinearLayout>
</LinearLayout>